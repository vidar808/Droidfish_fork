<?xml version="1.0" encoding="utf-8"?>
<!-- Lichess-style explorer move row: Move | %games | count | WDL bar -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">

    <!-- Move SAN -->
    <TextView
        android:id="@+id/moveSan"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#FFE8E6E3"
        android:gravity="start" />

    <!-- % of total games -->
    <TextView
        android:id="@+id/gamePct"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#99BAB6AD"
        android:gravity="end" />

    <!-- Formatted game count -->
    <TextView
        android:id="@+id/gameCount"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#99BAB6AD"
        android:gravity="end"
        android:paddingRight="6dp" />

    <!-- W/D/L bar fills remaining width -->
    <org.petero.droidfish.activities.util.WDLBarView
        android:id="@+id/wdlBar"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_weight="1" />

</LinearLayout>
