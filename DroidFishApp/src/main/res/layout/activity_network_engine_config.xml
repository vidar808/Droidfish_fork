<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Discovery section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/net_config_section_discovery"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/net_config_scan_qr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/scan_qr_code" />

            <Button
                android:id="@+id/net_config_discover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/discover_servers" />
        </LinearLayout>

        <Button
            android:id="@+id/net_config_import_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/net_config_import_file" />

        <!-- Server engines list (hidden by default, shown after discovery) -->
        <ListView
            android:id="@+id/net_config_engines_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

        <!-- Connection section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/net_config_section_connection"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/host_name"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/net_config_host"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:hint="@string/net_config_host_hint"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/network_port"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/net_config_port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:singleLine="true" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/net_config_port_hint"
            android:textSize="11sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="4dp" />

        <!-- Engine selection (single-port mode) -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/net_config_fetch_engines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fetch_engines" />

            <TextView
                android:id="@+id/net_config_selected_engine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="13sp"
                android:textColor="#2E7D32"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Security section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/net_config_section_security"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/net_config_security_method"
                android:layout_marginEnd="10dp" />

            <Spinner
                android:id="@+id/net_config_security_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/net_config_tls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/use_tls"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/net_config_token_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auth_token"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/net_config_auth_token"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:hint="@string/auth_token_hint"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/net_config_psk_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/net_config_psk_key"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/net_config_psk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/net_config_fingerprint_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/net_config_fingerprint"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/net_config_fingerprint_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textIsSelectable="true"
                android:textSize="11sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Test connection -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/net_config_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/net_config_test_connection" />

            <ProgressBar
                android:id="@+id/net_config_test_progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/net_config_test_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="13sp"
            android:visibility="gone" />

        <!-- Action buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/net_config_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="#D32F2F" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/net_config_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/net_config_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/net_config_save" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
